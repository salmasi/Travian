{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Security": {
    "MaxLoginAttempts": 5,
    "LoginLockoutMinutes": 15,
    "GlobalLockoutMinutes": 60
  },
  "JwtConfig": {
    "Secret": "your-256-bit-secret-key",
    "Issuer": "travian-clone",
    "Audience": "travian-clone",
    "ExpirationInMinutes": 1440,
    "RefreshTokenExpirationInDays": 7
  },
  "EmailSettings": {
    "FromAddress": "noreply@travian-clone.ir",
    "FromName": "Travian Clone",
    "SmtpServer": "smtp.example.com",
    "Port": 587,
    "Username": "your-username",
    "Password": "your-password",
    "EnableSsl": true
  },
  "BruteForceProtectionSettings": {
    "MaxFailedAttempts": 5,
    "FailedAttemptsWindowMinutes": 15,
    "AccountLockoutMinutes": 30,
    "IpBlockMinutes": 60
  },
  "AllowedHosts": "*"
}
